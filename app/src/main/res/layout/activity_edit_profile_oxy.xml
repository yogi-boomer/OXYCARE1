<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_app"
    tools:context=".pagesOxy.ui.editProfile_Oxy">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/btnMenuP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicio"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:backgroundTint="#464646" />
        <Button
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/btnMisAnalisisP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis análisis"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:backgroundTint="#464646" />
        <Button
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/btnPerfilP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:backgroundTint="#464646" />
    </LinearLayout>
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar perfil"
        android:textColor="@color/black"
        android:textSize="30sp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editar información"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:backgroundTint="#464646"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:padding="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="foto"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:paddingLeft="20dp"/>
                        <TextView
                            android:padding="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID:"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:paddingLeft="20dp"/>
                        <TextView
                            android:padding="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre(s):"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:paddingLeft="20dp"/>
                        <TextView
                            android:padding="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apellido paterno:"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:paddingLeft="20dp"/>
                        <TextView
                            android:padding="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apellido materno:"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:paddingLeft="20dp"/>
                        <TextView
                            android:padding="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Genero:"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:paddingLeft="20dp"/>
                        <TextView
                            android:padding="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fecha de nacimiento:"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:paddingLeft="20dp"/>
                        <TextView
                            android:padding="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Altura:"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:paddingLeft="20dp"/>
                        <TextView
                            android:padding="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Padecimientos:"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:paddingLeft="20dp"/>
                        <TextView
                            android:padding="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Correo electronico:"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:paddingLeft="20dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:orientation="vertical">
                        <EditText
                            android:padding="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="foto"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:paddingLeft="20dp"/>
                        <EditText
                            android:padding="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="foto"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:paddingLeft="20dp"/>
                        <EditText
                            android:padding="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="foto"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:paddingLeft="20dp"/>
                        <EditText
                            android:padding="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="foto"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:paddingLeft="20dp"/>
                        <EditText
                            android:padding="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="foto"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:paddingLeft="20dp"/>
                        <EditText
                            android:padding="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="foto"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:paddingLeft="20dp"/>
                        <EditText
                            android:padding="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="foto"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:paddingLeft="20dp"/>
                        <EditText
                            android:padding="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="foto"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:paddingLeft="20dp"/>
                        <EditText
                            android:padding="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="foto"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:paddingLeft="20dp"/>
                        <EditText
                            android:padding="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="foto"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:paddingLeft="20dp"/>

                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guardar y salir"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:backgroundTint="#464646"/>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>